<a href='/notifications' rel="noopener noreferrer" class='relative'>
  {% render 'left_column_icon', icon: 'far fa-bell', iconSize: 'text-3xl' %}

  {% if numOfUnreadNotifications > 0 %}
      <span class='absolute flex items-center justify-center -right-3 -top-2 text-white font-roboto bg-red-700 rounded-full h-5 w-5 text-xs'>{{numOfUnreadNotifications}}</span>
  {% endif %}
</a>

<a href='/messages' rel="noopener noreferrer" class='relative'>
  {% render 'left_column_icon', icon: 'far fa-envelope', iconSize: 'text-3xl' %}

  {% if numOfUnreadChats > 0 %}
      <span class='absolute flex items-center justify-center -right-3 -top-2 text-white font-roboto bg-red-700 rounded-full h-5 w-5 text-xs'>{{numOfUnreadChats}}</span>
  {% endif %}
</a>

