<div class='post-wrapper w-full border-b-2 border-brand-light-gray flex flex-row space-x-5 py-3 px-8 justify-between' data-pid="{{post._id}}">
  <div class="post__image-container w-14 h-14">
    <img 
      class="rounded-full bg-white" 
      src="{{post.postedBy.profilePic}}" 
      alt="{{post.postedBy.username}} profile pic" 
    />
  </div>

  <div class='post-content-container flex flex-col w-full'>
    <div class='post-content__info flex flex-row items-center w-full'>
      <div class="post-content-info__username-container">
        <p class="name font-bold">{{post.postedBy.firstName}} {{post.postedBy.lastName}} -</p>
      </div>
      
      <div class="post-content-info__email-container ml-1">
        <p class="username text-brand-blue font-medium">@{{post.postedBy.username}}</p>
      </div>
      
      <div class="post-content-info__time-container ml-1">
        <p class="time font-normal">- {{post.fromNow}}</p>
      </div>
    </div>

    <div class="post-content__text w-full mt-1">
      <p>{{post.content}}</p>
    </div>

    <div class='w-full flex flex-row justify-end mt-2'> 
      <div class="post-content__buttons flex flex-row">
        <button class='ml-3'>
          <i class="fas fa-retweet text-brand-purple text-xl cursor-pointer hover:text-brand-purple hover:text-opacity-75 hover:-translate-y-0.5 transform pointer-events-none"></i>
        </button>
        <button class='ml-3'>
          <i class="far fa-comment text-brand-purple text-xl cursor-pointer hover:text-brand-purple hover:text-opacity-75 hover:-translate-y-0.5 transform pointer-events-none"></i>
        </button>
        <button class='post-like ml-3'>
          {% assign likes = post.likes | join: "," %}

          <i class="
           {% if likes contains user._id %}
            fas
          {% else %}
            far
          {% endif %}
          fa-heart text-brand-purple text-xl cursor-pointer hover:text-brand-purple hover:text-opacity-75 hover:-translate-y-0.5 transform pointer-events-none"></i>
        </button>
        <span class="likes-num font-normal text-gray-700 ml-1">
          {% if post.likes.size > 0 %}
            {{post.likes.size}}
          {% else %}
            &nbsp;&nbsp;
          {% endif %}
        </span>
      </div>
    </div>
  </div>
    
  
</div>