{% if user._id == message.sender %}
    <div class='message-container sent flex w-full px-4 mb-2'>
      <div class='max-w-[55%]'>
        <span class='inline-block px-4 py-2 rounded-2xl'>{{message.content}}</span>
      </div>
    </div>
{% else %}
    <div class='message-container received flex w-full px-4 mb-2'>
      <div class='max-w-[55%]'>
        <span class='inline-block px-4 py-2 rounded-2xl'>{{message.content}}</span>
      </div>
    </div>
{% endif %}