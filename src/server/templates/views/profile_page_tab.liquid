{% if active == false %}
  
  <div class='tab-container w-1/3 hover:bg-comment-button-blue hover:bg-opacity-20 
  hover:cursor-pointer hover:text-brand-blue border-b-2 border-transparent
  hover:border-brand-blue' data-tab-id="{{text}}">
    <div class='tab flex justify-center items-center h-16 pointer-events-none'>
      <span class='text-dark-gray-for-text font-bold  pointer-events-none'>{{text}}</span>
    </div>
  </div>

{% else %}

  <div class='active tab-container w-1/3 hover:bg-comment-button-blue hover:bg-opacity-20 hover:cursor-pointer hover:text-brand-blue border-b-2 hover:border-brand-blue' data-tab-id="{{text}}">
    <div class='tab flex justify-center items-center h-16 pointer-events-none'>
      <span class='text-brand-blue font-bold pointer-events-none'>{{text}}</span>
    </div>
  </div>

{% endif %}