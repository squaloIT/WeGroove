<div class="w-full">
  <div class='top-wrapper border-b border-super-light-gray-border pb-4 mt-2 px-3'>
    <h1
      class="text-brand-purple font-bold tracking-wider text-3xl font-lobster ">
      {{user.username}}</h1>
    <p class='text-base text-gray-500 '>{{posts.size}} Posts</p>
  </div>

  <div class="profile-pictures-wrapper">
    <div class="profile-pictures-container">
      <div class='profile-cover-picture w-full'>
        <img src='{{user.coverPic}}' alt='Cover' class='w-full' />
      </div>
      
      <div class='profile-pictures flex justify-end items-end relative px-3'>
        <div class="profile-picture-container rounded-full border-2 border-white w-40 h-40 absolute -top-20 left-4">
          <img src="{{user.profilePic}}" alt="User profile picture" class='w-full rounded-full border-2 hover:cursor-pointer hover:bg-opacity-90' />
        </div>

        <div class='profile-pictures-buttons'>
          <div class='flex justify-items-end mt-5'>
            <button class='cursor-pointer bg-opacity-75 edit-profile-button text-base font-semibold rounded-xl bg-[#1DA1F2] text-white outline-none px-3 py-2 hover:bg-[#1DA1F2] hover:bg-opacity-100 focus:outline-none focus:ring-2 focus:bg-[#1DA1F2] focus:ring-opacity-50'>
                <span class='comment-button__label pointer-events-none'>Edit profile</span>
            </button>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class='profile-info-wrapper mt-10 px-4'>
    <div class='profile-usernames-wrapper pb-3'>
      <h3 class='text-2xl font-bold text-dark-gray-for-text'>{{user.firstName}} {{user.lastName}}</h3>
      <p class='text-base text-mid-gray-for-text '>@{{user.username}}</p>
    </div>

    <div class='profile-info-description mb-2'>
      <p class='text-dark-gray-for-text text-base'>{{user.description}}</p>
    </div>
    <div class='profile-info-joined mb-3'>
      <p class='text-mid-gray-for-text flex items-center'>
        <span class='inline pr-2'>
          <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 fill-current inline text-mid-gray-for-text">
            <g><path d="M19.708 2H4.292C3.028 2 2 3.028 2 4.292v15.416C2 20.972 3.028 22 4.292 22h15.416C20.972 22 22 20.972 22 19.708V4.292C22 3.028 20.972 2 19.708 2zm.792 17.708c0 .437-.355.792-.792.792H4.292c-.437 0-.792-.355-.792-.792V6.418c0-.437.354-.79.79-.792h15.42c.436 0 .79.355.79.79V19.71z"></path><circle cx="7.032" cy="8.75" r="1.285"></circle><circle cx="7.032" cy="13.156" r="1.285"></circle><circle cx="16.968" cy="8.75" r="1.285"></circle><circle cx="16.968" cy="13.156" r="1.285"></circle><circle cx="12" cy="8.75" r="1.285"></circle><circle cx="12" cy="13.156" r="1.285"></circle><circle cx="7.032" cy="17.486" r="1.285"></circle><circle cx="12" cy="17.486" r="1.285"></circle></g>
          </svg>
        </span>
        <span>
          Joined {{user.joined}}
        </span>
      </p>
    </div>

    <div class='following-info-wrapper flex justify-start mb-5'>
       <div class='profile-info-following'>
        <p class='text-base '>
          <span class='number-of-following font-bold'>131</span> 
          <span class='text-mid-gray-for-text'>Following</span>
        </p>
      </div>

      <div class='profile-info-followers ml-7'>
        <p class='text-base '>
          <span class='number-of-following font-bold'>2</span> 
          <span class='text-mid-gray-for-text'>Followers</span>
        </p>
      </div>
    </div>
  </div>

  <div class='tabs-wrapper flex justify-between h-16 border-b border-t border-super-light-gray-border'>
    {% render 'profile_page_tab', active: active, text: 'Posts' %}
    {% render 'profile_page_tab', active: active, text: 'Replies' %}
    {% render 'profile_page_tab', active: active, text: 'Likes' %}
  </div>

  <div class='content-wrapper' id='profile-posts'>
    {% render 'posts', posts: posts, user: user %}
  </div>
</div>