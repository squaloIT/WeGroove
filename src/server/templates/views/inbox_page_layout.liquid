<div class="w-full" id='inbox'>
  <div class='top-wrapper flex justify-between items-baseline border-b border-super-light-gray-border pb-4 mt-2 px-3'>
    <div class='w-4/5'>
      <h1 class="text-brand-purple font-bold tracking-wider text-3xl font-lobster ">{{title}}</h1>
    </div>

    <div class='w-1/5 flex justify-end'>
      {% if title == 'New Message' %}
          <a href='/message'>
            <i class="fas fa-inbox text-2xl rounded-full cursor-pointer hover:-translate-y-0.5 transform hover:text-brand-purple text-brand-dark-gray"></i>
          </a>
      {% else %}
          <a href='/message/new-message'>
            <i class="far fa-plus-square text-2xl rounded-full cursor-pointer hover:-translate-y-0.5 transform hover:text-brand-purple text-brand-dark-gray"></i>
          </a>
      {% endif %}

    </div>
  </div>

  {% if title == 'New Message' %}

    <div class='user-list-wrapper w-full flex items-baseline px-4 py-2 border-b border-super-light-gray-border 
    min-h-[60px]'>
        <label>To: </label>
        <input type='text' class='border-0 ml-2 bg-transparent border-none ring-0 outline-white focus:outline-white focus:shadow-none focus:ring-0 min-w-full' name='search-user' id="search-user" placeholder='Type the name of the person'/>
    </div>

    <div class='w-full flex items-center justify-center'>
      <button id="createChatButton" type="button" class="flex justify-center py-2 px-4 border border-transparent bg-opacity-50 rounded-3xl shadow-sm text-sm font-medium text-white bg-brand-purple focus:outline-none cursor-auto focus:ring-2 focus:ring-offset-2 focus:ring-brand-purple mt-8 md:text-lg sm:text-lg xs:text-lg" disabled="">
        Create chat
      </button>
    </div>

    <div class='content-wrapper'>
    
    </div>
  {% else %}
  {% endif %}

</div>
