<html>

{% render 'head_partial' %}

<body>
  <div class='flex flex-col justify-center items-center mt-10 xs:mt-6 xs:px-4 w-full'>
    {% render 'login_register_header.liquid', text: 'Need and account? ', 
      linkText: 'Register here.', href: '/registration', title: title %}
    <div
      class='w-1/3 h-3/5 flex-col bg-super-light-gray-border bg-opacity-30 shadow-md border-2 border-brand-purple border-solid lg:w-1/3 md:w-4/6 sm:w-2/3 xs:w-11/12 xs:px-4'>
      <div class="mt-8 px-20 xl:px-16 xs:px-6 sm:px-6 md:px-16 lg:px-20">
        <p class='text-base w-full text-center font-roboto text-red-500 mb-1 ml-1'>{{msg}}</p>

        <form method="post" action="/login" id='login-form'>
          {% comment %} {% render 'login_form_input', type: 'text', inputName: 'email', inputId: 'email', labelText: 'Email: ', required: true, placeholder: 'john_doe@email.com', errorLabelText: 'Email must be a valid email', hasErrorLabel: true, value: email %} {% endcomment %}
          {% comment %} {% render 'login_form_input', additionalLabelClasses:'mt-4', type: 'password', inputName: 'password', inputId: 'password', labelText: 'Password: ', required: true, value: password %} {% endcomment %}
          {% render 'login_form_input', type: 'text', inputName: 'email', inputId: 'email', labelText: 'Email: ', required: true, placeholder: 'john_doe@email.com', errorLabelText: 'Email must be a valid email', hasErrorLabel: true %}
          {% render 'login_form_input', additionalLabelClasses:'mt-4', type: 'password', inputName: 'password', inputId: 'password', labelText: 'Password: ', required: true %}
          
          <label class="block items-center text-base font-roboto mt-2 cursor-pointer ">
            <input 
              type="checkbox" 
              name='rememberMe'
              class="w-4 h-4 rounded border-gray-300 text-brand-purple shadow-sm focus:border-brand-purple focus:ring focus:ring-offset-0 focus:ring-indigo-200 focus:ring-opacity-50" 
              checked
              value='rememberMe' />
            <span class="ml-2">Remember me</span>
          </label>

          {% render 'login_register_submit_button', text: 'Login'%}
        </form>
      </div>

    </div>
  </div>


</body>
<script src="/script.bundle.js"></script>

</html>