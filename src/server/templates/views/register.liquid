<html>

{% render 'head_partial' %}

<body>
<div class='w-screen h-screen justify-center items-center'>
<div class='flex flex-col justify-center items-center w-screen h-screen'>
  <div class='flex flex-col justify-center items-center h-screen w-1/2 relative  xl:w-1/2 lg:w-2/3 md:w-4/5'>

      <div class='absolute z-0 top-[20%] left-[10%] w-[500px] h-[500px] bg-brand-purple bg-opacity-75 rounded-full mix-blend-multiply filter blur-2xl opacity-70 animate-blob'></div>
        
      <div class='absolute z-0 bottom-[10%] left-[15%] w-[500px] h-[500px] bg-comment-button-blue rounded-full mix-blend-multiply filter blur-2xl opacity-25 animate-blob animation-delay-4000'></div>
      
      <div class='absolute z-0 top-[20%] right-[10%] w-[500px] h-[500px] bg-brand-blue bg-opacity-75 rounded-full mix-blend-multiply filter blur-2xl opacity-70 animate-blob animation-delay-2000'></div>

      <div class='absolute z-0 bottom-[5%] right-[15%] w-[500px] h-[500px] bg-brand-purple bg-opacity-40 rounded-full mix-blend-multiply filter blur-2xl opacity-70 animate-blob animation-delay-1000'></div>

    {% render 'login_register_header.liquid', text: 'Already have account?', linkText: 'Click here to sign in.', href: '/login', title: title %}

    <div
      class='w-3/5 mt-6 flex-col bg-white bg-opacity-80 rounded-lg shadow-md border border-brand-purple border-solid relative z-10'>
       {% comment %}  {% endcomment %}
      <div class="mt-8 px-20">

        <p class='text-base w-full text-center font-roboto text-red-500 mb-1 ml-1'>{{msg}}</p>

        <form method="post" action="/registration" id='registration-form'>
          <div class='mt-6'>
            {% render 'register_form_input', type: 'text', inputName: 'firstName', inputId: 'firstName', labelText: 'First name: ', required: true, placeholder: 'John', errorLabelText: 'You must specify first name and it must begin with an uppercase', hasErrorLabel: true %}
          </div>
          <div class='mt-6'>
            {% render 'register_form_input', type: 'text', inputName: 'lastName', inputId: 'lastName', labelText: 'Last Name: ', required: true, placeholder: 'Doe', errorLabelText: 'Last name needs to begin with capital letter and have minimum 2 chars', hasErrorLabel: true %}
          </div>
          
          <div class='mt-6'>
            {% render 'register_form_input', type: 'text', inputName: 'username', inputId: 'username', labelText: 'Username: ', required: true, placeholder: 'Your username', errorLabelText: 'Username must be 3-20 characters long, no _ or . at the beginning, no __ or _. or ._ or .. inside and no _ or . at the end', hasErrorLabel: true %}
          </div>

          <div class='mt-6'>
            {% render 'register_form_input', type: 'text', inputName: 'email', inputId: 'email', labelText: 'Email: ', required: true, placeholder: 'john_doe@email.com', errorLabelText: 'Email must be a valid email', hasErrorLabel: true %}
          </div>
          
          <div class='mt-6'>
            <label for='description' class="block text-base font-roboto ml-1">Description</label>
            <textarea class='form-control mt-0 block w-full px-1 border-0 border-b-2 border-brand-purple focus:ring-0 focus:border-brand-purple bg-transparent align-bottom' placeholder="About you..." name='description' id='description'></textarea>
          </div>

          <div class='mt-6'>
            {% render 'register_form_input', type: 'password', inputName: 'password', inputId: 'password', labelText: 'Password: ', required: true, errorLabelText: 'Password has minimum eight characters, at least one letter and one number:', hasErrorLabel: true %}
          </div>
         
          <div class='mt-6'>
            {% render 'register_form_input', type: 'password', inputName: 'confirmPassword', inputId: 'confirmPassword', labelText: 'Confirm Password: ', required: true, errorLabelText: 'Passwords must match.', hasErrorLabel: true %}
          </div>

          {% render 'login_register_submit_button', text: 'Register'%}
        </form>
      </div>

    </div>
  </div>

  <script src="/script.bundle.js"></script>
</body>

</html>